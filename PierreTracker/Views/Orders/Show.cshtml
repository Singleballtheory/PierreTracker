@using PierreTracker.Models;

<h1>@Model.VendorName</h1>
<h3>Description: @Model.VendorDescription</h3>
<h3>List of orders by @Model.VendorName :</h3>
@if (Model.Count == 0)
{
  <p>No orders added yet</p>
}

<ul>
  @foreach (Order order in Model)
  {
    <li>
      <a href="/orders/@order.Id">@order.OrderTitle</a>
    </li>
  }
</ul>

<a href="/orders/new">ADD AN ORDER</a>
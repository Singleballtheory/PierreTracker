@using PierreTracker.Models;

<h1>@Model["vendor"].VendorName</h1>
<p>Additional Notes: @Model["vendor"].VendorDescription</p>

<p>Click on any order below to see the complete order details</p>
@if (Model.Count == 0)
{
  <p>No orders added yet</p>
}

<ul>
  @foreach (Order order in @Model["orders"])
  {
    <li>
      <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.OrderTitle</a>
    </li>
  }
</ul>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>ADD AN ORDER</a></p>

<p><a href="/vendors">RETURN TO VENDOR LIST</a></p>




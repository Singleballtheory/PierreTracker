@using PierreTracker.Models;

<h1>List of Vendors</h1>
@if (Model.Count == 0)
{
  <p>You haven't added any vendors yet</p>
}

<ul>
  @foreach (Vendor vendor in Model)
  {
    <li>
      <a href="/vendors/@vendor.Id">@vendor.VendorName</a>
    </li>
  }
</ul>

<a href="/vendors/new">ADD A NEW VENDOR</a>

<p><a href="/">RETURN TO MAIN PAGE</a></p>